    //   {
    //     "type": "attribute",
    //     "prefix": ["app", "ar"],
    //     "style": "camelCase"
    //   }
    // ],
    // "@angular-eslint/component-selector": [
    //   "error",
    //   {
    //     "type": "element",
    //     "prefix": ["app", "ar"],
    //     "style": "kebab-case"
    //   }
    // ]
  }
}
